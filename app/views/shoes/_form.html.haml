= form_for(@shoe, :html=>{:multipart=>true}) do |f|
  - if @shoe.errors.any?
    #error_explanation
      %h2
        = pluralize(@shoe.errors.count, 'erro')
        este produto não pode ser salvo:
      %ul
        - @shoe.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'Informações obrigatórias*'
    %br/
    %br/
  .field
    = f.label 'Nome*'
    %br/
    = f.text_field :name 
  .field
    = f.label 'Valor*'
    %br/
    = f.text_field :value 
  .field
    = f.label 'Público Alvo*'
    %br/
    = select(:shoe, :audience, options_for_select([['Infantil'],['Adulto'],['Social'],['Esporte']]))
  .field
    = f.label 'Estoque*'
    %br/
    = f.number_field :stock
  .field
    = f.label 'Data de registro'
    %br/
    = f.date_select :registed,start_year: Date.today.year, end_year: Date.today.year
  .field
    = f.label 'Descrição*'
    %br/
    = f.text_area :description
  .field
    = f.label 'Permição'
    %br/
    = f.check_box :permit, {:checked=>true}
  .field
    = render partial: 'shared/image_field', locals: { f: f }
  .actions
    = f.submit 'Cadastrar',class: 'submit'
= form_for(@shoe, :html=>{:multipart=>true}) do |f|
  - if @shoe.errors.any?
    #error_explanation
      %h2
        = pluralize(@shoe.errors.count, "error")
        prohibited this shoe from being saved:
      %ul
        - @shoe.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :value
    %br/
    = f.text_field :value
  .field
    = f.label :promotion
    %br/
    = f.text_field :promotion
  .field
    = f.label :audience
    %br/
    = f.text_field :audience
  .field
    = f.label :stock
    %br/
    = f.number_field :stock
  .field
    = f.label :registed
    %br/
    = f.date_select :registed,start_year: Date.today.year, end_year: Date.today.year
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = render partial: 'shared/image_field', locals: { f: f }
  .actions
    = f.submit
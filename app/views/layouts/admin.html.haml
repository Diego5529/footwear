%html
  %head
    %title -Footwear-
    = stylesheet_link_tag    "people", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    //%img{:width => "100", :height => "100",:src =>"startup.jpg"}
    %header
      %h1
        CATALOG FOOTWEAR
      %h3
        Bem vindo, #{session[:name]}.
        = link_to "Sair", logout_path

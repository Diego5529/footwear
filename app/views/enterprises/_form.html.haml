#form
  = form_for(@enterprise,  :html=> {:multipart=>true}) do |f|
    - if @enterprise.errors.any?
      #error_explanation
        %h2
          = pluralize(@enterprise.errors.count, 'erro')
          esta empresa não pode ser salva:
        %ul
          - @enterprise.errors.full_messages.each do |msg|
            %li= msg
    .field
      %b Informação obrigatória*
      %br/
      %br/
    .field
      %b Nome*
      %br/
      = f.text_field :name
    .field
      %b Nome Social*
      %br/
      = f.text_field :name_social
    .field
      %b E-mail*
      %br/
      = f.text_field :email
    .field
      %b Senha*
      %br/
      = f.password_field :plain_password
    .field
      %b CNPJ*
      %br/
      = f.text_field :cnpj
    .field
      %b CEP*
      %br/
      = f.text_field :zip_code
    .field
      %b Endereço*
      %br/
      = f.text_field :address
    .field
      %b Numero*
      %br/
      = f.text_field :number
    .field
      %b Bairro*
      %br/
      = f.text_field :district
    .field
      %b Estado*
      %br/
      = f.text_field :state
    .field
      %b Cidade*
      %br/
      = f.text_field :city
    .field
      %b Telefone*
      %br/
      = f.text_field :telephone
    .field
      %b Permissão
      %br/
      = f.check_box :permit, {:checked=>true}
    .field
      = render partial: 'shared/image_field', locals: { f: f }
    %br
    .actions
      = f.submit 'Cadastrar', class: 'submit'
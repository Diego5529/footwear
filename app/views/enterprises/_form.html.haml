= form_for(@enterprise,  :html=> {:multipart=>true}) do |f|
  - if @enterprise.errors.any?
    #error_explanation
      %h2
        = pluralize(@enterprise.errors.count, 'erro')
        esta empresa não pode ser salva:
      %ul
        - @enterprise.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'Informação obrigatória*'
    %br/
  .field
    = f.label 'Nome*'
    %br/
    = f.text_field :name
  .field
    = f.label 'Nome Social*'
    %br/
    = f.text_field :name_social
  .field
    = f.label 'E-mail*'
    %br/
    = f.text_field :email
  .field
    = f.label 'Senha*'
    %br/
    = f.password_field :plain_password
  .field
    = f.label 'CNPJ*'
    %br/
    = f.text_field :cnpj
  .field
    = f.label 'CEP*'
    %br/
    = f.text_field :zip_code
  .field
    = f.label 'Endereço*'
    %br/
    = f.text_field :address
  .field
    = f.label 'Numero*'
    %br/
    = f.text_field :number
  .field
    = f.label 'Bairro*'
    %br/
    = f.text_field :district
  .field
    = f.label 'Estado*'
    %br/
    = f.text_field :state
  .field
    = f.label 'Cidade*'
    %br/
    = f.text_field :city
  .field
    = f.label 'Telefone*'
    %br/
    = f.text_field :telephone
  .field
    = f.label 'Permição'
    %br/
    = f.check_box :permit
  .field
    = render partial: 'shared/image_field', locals: { f: f }
  %br
  .actions
    = f.submit 'Cadastrar'
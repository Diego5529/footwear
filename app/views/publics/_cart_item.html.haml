%ul
  %li{:id => "item_#{cart_item.id}"}
    = image_tag(cart_item.image,:height=>200)
    = cart_item.name
    %br/
    %span.shoe_value= number_to_currency(cart_item.value)
    %br/
    = link_to("Remove item", {:action=>"remove",:id=>cart_item.id},:remote=>true,:method=>:delete,:class=>"remove_shoe",:confirm=>"Are you sure ?")
    \-
    = link_to "Continue shopping", "/"
    \-
    = link_to "Closed request", "/checkout"
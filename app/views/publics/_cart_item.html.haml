%ul
  %ul{:id => "item_#{cart_item.id}"}
    = image_tag(cart_item.image,:height=>200)
    #shoes
      %p
        %h2
          = cart_item.name
        %h6{ style:"color:#000"}
          = cart_item.category.name
          \-
          = cart_item.description
      %span.shoe_value= number_to_currency(cart_item.value)
    %br
    = link_to("Remover item", {:action=>"remove",:id=>cart_item.id},:remote=>true,:method=>:delete,:class=>"remove_shoe",:confirm=>"Tem certeza ?")
    \-
    %b= link_to "Continuar comprando", "/"
    %hr
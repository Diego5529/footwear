.container
  #name_page
    = render partial: 'categories', collection: @categories
  #menu_left
    .title
      Empresas
    %h3
      = render partial: 'enterprises', collection: @enterprises
    = render "menu2"
  #content_shoe
    %h1 Detalhes do Produto
    #show_details
      %b= @shoe.name
      #end
      = link_to @shoe.enterprise.name, "/enterprise/#{@shoe.enterprise.id}"
      %ul
        = image_tag(@shoe.image,width: 300,class: 'MYCLASS')
      %h5{ style: "color:black"}
        = simple_format(@shoe.description)
      %iframe{allowtransparency: "true", frameborder: "0", scrolling: "no", src: "http://www.facebook.com/plugins/like.php?href=http://192.168.0.140:3000/shoe/#{@shoe.id}&layout=standard&show_faces=false&width=380&action=like&colorscheme=light&height=25", style: "border:none; overflow:hidden; width:250px; height:25px;"}
      %br/
      %br/
      %b
        %span.shoe_value= number_to_currency(@shoe.value)
      %br/
      - if @shoe.sold_out?
        %h4.sold_out Esgotado!
      - else
        =link_to (image_tag("bt_comprar.gif")),"/buy/#{@shoe.id}", method: :post
        %end
  #enterprise_total
    %b Empresa:
    = @shoe.enterprise.name
    %br
    = image_tag(@shoe.enterprise.image,width: 150,height: 150)
    #enterprise_details
      %br/
      %b E-mail:
      = @shoe.enterprise.email
      %br/
      %b Telefone:
      = @shoe.enterprise.telephone
      %br/
      %b Endere√ßo:
      = @shoe.enterprise.address
      ,
      = @shoe.enterprise.number
      %br/
      %b Cidade:
      = @shoe.enterprise.city
      %br/
      %b Estado:
      = @shoe.enterprise.state
      %br/
      %b Bairro:
      = @shoe.enterprise.district
      %br/
  #end
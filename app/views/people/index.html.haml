%h1 Listing people
%table{:align => "center"}
  %tr
    %th Name
    %th Password
    %th Admin
    %th
    %th
    %th
  - @people.each do |person|
    %tr
      %td= person.name
      %td= person.password
      %td= person.admin
      %td= link_to 'Show', person
      %td= link_to 'Edit', edit_person_path(person)
      %td= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }
  %hr
%h2= link_to 'New Admin', new_person_path
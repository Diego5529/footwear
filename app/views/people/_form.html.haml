= form_for(@person) do |f|
  - if @person.errors.any?
    #error_explanation
      %h2
        = pluralize(@person.errors.count, "error")
        prohibited this person from being saved:
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Nome"
    %br/
    = f.text_field :name
  .field
    = f.label "Senha"
    %br/
    = f.text_field :plain_password
  .field
    = f.label "Administrador"
    %br/
    = f.check_box :admin
  .actions
    = f.submit "Novo Administrador"